<body>
  <h2>House Price Predictor</h2>
  Size (sq ft): <input id="size" type="number"><br>
  Bedrooms: <input id="bedrooms" type="number"><br>
  <button onclick="predict()">Predict</button>
  <p id="result"></p>

  <script>
    function predict() {
      let size = parseFloat(document.getElementById('size').value);
      let bedrooms = parseFloat(document.getElementById('bedrooms').value);

      let a = 100, b = 20000, c = 5000;
      let price = a * size + c * bedrooms + b;
      document.getElementById('result').innerText = "Predicted Price: $" + price.toFixed(2);
    }
  </script>
</body>
